<% /* ****************************************
 * NEW FILE: views/inventory/search.ejs
 * New View: Search Input Form
 * *************************************** */ %>
 <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%# Display flash messages and errors, using existing structure %>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
<% errors.forEach(error => { %>
    <li><%= error.msg %></li>
<% }) %>
  </ul>
<% } %>

<div class="search-container">
    <form id="searchForm" action="/search" method="POST">
        <h2>Find Your Next Vehicle</h2>
        
        <label for="searchTerm">Search Term:</label>
        <input type="text" id="searchTerm" name="searchTerm" 
               placeholder="e.g., Batmobile, Truck, Ford" 
               value="<%= searchTerm %>" required>

        <label for="maxPrice">Maximum Price (Optional):</label>
        <input type="number" id="maxPrice" name="maxPrice" 
               placeholder="e.g., 50000" 
               value="<%= maxPrice %>" min="1">
               
        <button type="submit">Search Inventory</button>
    </form>
</div>